<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">
  <persistence-unit name="clinique" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

    <!-- classes d’entités -->
    <class>com.cliniquedigitale.entities.User</class>
    <class>com.cliniquedigitale.entities.Patient</class>
    <class>com.cliniquedigitale.entities.Doctor</class>
    <class>com.cliniquedigitale.entities.Specialty</class>
    <class>com.cliniquedigitale.entities.Availability</class>
    <class>com.cliniquedigitale.entities.Appointment</class>

    <properties>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5434/clinique"/>
      <property name="jakarta.persistence.jdbc.user" value="root"/>
      <property name="jakarta.persistence.jdbc.password" value="1234"/>
      <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.show_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>

